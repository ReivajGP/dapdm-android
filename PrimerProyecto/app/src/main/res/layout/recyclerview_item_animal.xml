<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/cardview_light_background">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvAnimal"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EEEFFF">

            <ImageView
                android:id="@+id/ivAnimalImage"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="#C6BCE8"
                android:layout_margin="1dp"
                android:src="@drawable/ic_android_photo" />

            <TextView
                android:id="@+id/tvAnimalName"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/ivAnimalImage"
                android:fontFamily="@font/bernier_shade_regular"
                android:textColor="#714699"
                android:textSize="25sp"
                tools:text="Nombre animal" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>