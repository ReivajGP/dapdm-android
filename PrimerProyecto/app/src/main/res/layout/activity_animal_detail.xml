<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9F6">

    <TextView
        android:id="@+id/tvAnimalName"
        android:text="NOMBRE"
        android:textColor="#5C54B3"
        android:textSize="35sp"
        android:gravity="bottom|center"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:fontFamily="@font/bernier_shade_regular"/>

    <ImageView
        android:id="@+id/ivAnimalImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvAnimalName"
        android:background="#DBDCFF"/>

    <CheckBox
        android:id="@+id/cbDisease"
        android:layout_below="@id/ivAnimalImage"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="¿Tiene alguna enfermedad?"
        android:textSize="22sp"/>

    <RadioGroup
        android:id="@+id/rgGender"
        android:layout_below="@id/cbDisease"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rbMale"
            android:text="Macho"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/rbFemale"
            android:text="Hembra"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </RadioGroup>

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ubicación"
        android:textSize="22dp"
        android:layout_below="@id/rgGender"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tvAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edad"
        android:textSize="22dp"
        android:layout_below="@id/tvLocation"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"/>
</RelativeLayout>