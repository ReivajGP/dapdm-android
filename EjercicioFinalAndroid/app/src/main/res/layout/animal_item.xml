<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="brief"
            type="com.rgp.ejerciciofinalandroid.model.entities.AnimalBrief" />

    </data>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.cardview.widget.CardView
            android:id="@+id/animalCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/animalBrief"
                    android:layout_toLeftOf="@id/animal_image"
                    android:padding="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvName"
                        android:hint="Nombre"
                        android:paddingTop="10dp"
                        android:textSize="20sp"
                        android:text="@{brief.name}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvCell"
                        android:hint="Celda"
                        android:text="@{brief.cell}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/animal_image"
                    android:layout_toRightOf="@id/animal_image"
                    android:layout_alignParentRight="true"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</layout>