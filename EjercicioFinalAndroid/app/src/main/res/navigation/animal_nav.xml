<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/animal_nav"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.rgp.ejerciciofinalandroid.view.fragments.ListFragment"
        android:label="fragment_list"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/action_listFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.rgp.ejerciciofinalandroid.view.fragments.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail">

        <argument
            android:name="animal"
            app:argType="com.rgp.ejerciciofinalandroid.model.entities.Animal"/>
        <action
            android:id="@+id/action_detailFragment_to_entryFragment"
            app:destination="@id/entryFragment" />
    </fragment>
    <fragment
        android:id="@+id/entryFragment"
        android:name="com.rgp.ejerciciofinalandroid.view.fragments.EntryFragment"
        android:label="fragment_entry"
        tools:layout="@layout/fragment_entry">
        <argument
            android:name="animal"
            app:argType="com.rgp.ejerciciofinalandroid.model.entities.Animal"/>
    </fragment>
</navigation>